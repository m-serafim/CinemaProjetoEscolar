@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg mt-5">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-person-plus"></i> @ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label asp-for="Input.Password" class="form-label mb-0">Password</label>
                                <button class="btn btn-sm btn-outline-secondary" type="button" id="toggleAllPasswords">
                                    <i class="bi bi-eye" id="toggleAllPasswordsIcon"></i>
                                    <span id="toggleAllPasswordsText">Mostrar Passwords</span>
                                </button>
                            </div>
                            <input asp-for="Input.Password" type="password" class="form-control password-field" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Password</label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control password-field" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 mb-3">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Criar Conta
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Já tem uma conta? 
                                <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    <i class="bi bi-box-arrow-in-right"></i> Faça login aqui
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="card shadow-lg mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Usar outro serviço para registar</h5>
                        <hr />
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Registar usando a sua conta @provider.DisplayName">
                                        <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Single button to toggle BOTH password fields visibility
        document.getElementById('toggleAllPasswords').addEventListener('click', function () {
            const passwordFields = document.querySelectorAll('.password-field');
            const icon = document.getElementById('toggleAllPasswordsIcon');
            const text = document.getElementById('toggleAllPasswordsText');
            
            // Check the current type of the first password field
            const isPassword = passwordFields[0].type === 'password';
            
            // Toggle all password fields
            passwordFields.forEach(function(field) {
                field.type = isPassword ? 'text' : 'password';
            });
            
            // Update icon and text
            if (isPassword) {
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
                text.textContent = 'Ocultar Passwords';
            } else {
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
                text.textContent = 'Mostrar Passwords';
            }
        });
    </script>
}
