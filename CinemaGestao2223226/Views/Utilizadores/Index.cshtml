@model IEnumerable<(Microsoft.AspNetCore.Identity.IdentityUser User, string Role)>

@{
    ViewData["Title"] = "Users";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container-fluid">
    <h1 class="mb-4"><i class="bi bi-people-fill"></i> Registered Users</h1>

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No users registered.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Email Confirmed</th>
                                <th>Role</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(u => u.User.Email))
                            {
                                <tr>
                                    <td><strong>@item.User.Email</strong></td>
                                    <td>@item.User.UserName</td>
                                    <td>
                                        @if (item.User.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-circle-fill"></i> No
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Role == "Administrador")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-shield-fill-check"></i> Administrator
                                            </span>
                                        }
                                        else if (item.Role == "Cliente")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-person-fill"></i> Customer
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.User.LockoutEnd.HasValue && item.User.LockoutEnd > DateTimeOffset.Now)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-lock-fill"></i> Locked
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-unlock-fill"></i> Active
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3">
                    <strong>Total Users:</strong> @Model.Count() | 
                    <strong>Administrators:</strong> @Model.Count(u => u.Role == "Administrador") | 
                    <strong>Customers:</strong> @Model.Count(u => u.Role == "Cliente")
                </div>
            }
        </div>
    </div>
</div>