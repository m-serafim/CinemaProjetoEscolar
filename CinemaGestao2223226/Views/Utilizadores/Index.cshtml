@model IEnumerable<(Microsoft.AspNetCore.Identity.IdentityUser User, string Role)>

@{
    ViewData["Title"] = "Utilizadores";
}

<div class="container">
    <h1 class="mb-4">👥 Utilizadores Registados</h1>

    <div class="card shadow">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Não há utilizadores registados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Email Confirmado</th>
                                <th>Role</th>
                                <th>Lockout</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(u => u.User.Email))
                            {
                                <tr>
                                    <td>@item.User.Email</td>
                                    <td>@item.User.UserName</td>
                                    <td>
                                        @if (item.User.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Sim
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-exclamation-circle"></i> Não
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Role == "Administrador")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-shield-fill"></i> @item.Role
                                            </span>
                                        }
                                        else if (item.Role == "Cliente")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-person-fill"></i> @item.Role
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.User.LockoutEnd.HasValue && item.User.LockoutEnd > DateTimeOffset.Now)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-lock-fill"></i> Bloqueado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-unlock-fill"></i> Ativo
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <div class="alert alert-info">
                        <strong>Total de Utilizadores:</strong> @Model.Count()
                        <br />
                        <strong>Administradores:</strong> @Model.Count(u => u.Role == "Administrador")
                        <br />
                        <strong>Clientes:</strong> @Model.Count(u => u.Role == "Cliente")
                    </div>
                </div>
            }
        </div>
    </div>
</div>