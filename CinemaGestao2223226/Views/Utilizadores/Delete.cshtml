@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Eliminar User";
    var userRole = ViewBag.UserRole as string;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4 text-danger">
                <i class="bi bi-person-x-fill"></i> Eliminar User
            </h1>

            <div class="alert alert-danger">
                <h5><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this user?</h5>
                <p class="mb-0">Esta ação não pode ser desfeita. Todas as reservas associadas a este utilizador serão afetadas.</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Detalhes do User</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-envelope-fill"></i> Email:</dt>
                        <dd class="col-sm-8"><strong>@Model.Email</strong></dd>

                        <dt class="col-sm-4"><i class="bi bi-person-fill"></i> Username:</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4"><i class="bi bi-shield-fill"></i> Role:</dt>
                        <dd class="col-sm-8">
                            @if (userRole == "Administrador")
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-shield-fill-check"></i> Administrador
                                </span>
                            }
                            else if (userRole == "Cliente")
                            {
                                <span class="badge bg-primary fs-6">
                                    <i class="bi bi-person-fill"></i> Cliente
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">@userRole</span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-check-circle-fill"></i> Email Confirmado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Sim
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-exclamation-circle-fill"></i> Não
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4"><i class="bi bi-key-fill"></i> User ID:</dt>
                        <dd class="col-sm-8"><code>@Model.Id</code></dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Sim, Eliminar User
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Não, Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>