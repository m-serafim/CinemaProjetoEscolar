@model CinemaGestao.Models.Reserva

@{
    var sessao = ViewBag.Sessao as CinemaGestao.Models.Sessao;
    ViewData["Title"] = "New Reservation";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container">
    <h1 class="mb-4">🎟️ New Reservation</h1>

    @if (sessao != null)
    {
        <div class="card mb-4 shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Session Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Movie:</strong> @sessao.Filme.Titulo</p>
                        <p><strong>Date:</strong> @sessao.DataHora.ToString("dd/MM/yyyy")</p>
                        <p><strong>Time:</strong> @sessao.DataHora.ToString("HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Room:</strong> @sessao.Sala</p>
                        <p><strong>Price per Ticket:</strong> @sessao.Preco.ToString("C")</p>
                        <p><strong>Available Seats:</strong> 
                            <span class="badge bg-success">@sessao.LugaresDisponiveis</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="SessaoId" value="@ViewData["SessaoId"]" />
                        
                        <div class="mb-3">
                            <label asp-for="NumeroBilhetes" class="form-label">
                                <i class="bi bi-ticket-perforated"></i> Number of Tickets
                            </label>
                            <input asp-for="NumeroBilhetes" class="form-control" type="number" 
                                   min="1" max="@(sessao?.LugaresDisponiveis ?? 20)" 
                                   value="1" id="numberOfTickets" />
                            <span asp-validation-for="NumeroBilhetes" class="text-danger"></span>
                        </div>

                        @if (sessao != null)
                        {
                            <div class="alert alert-info">
                                <h5 class="mb-2">
                                    <i class="bi bi-calculator"></i> Total Amount:
                                </h5>
                                <h3 class="mb-0 text-primary">
                                    <strong id="total">@sessao.Preco.ToString("C")</strong>
                                </h3>
                                <small class="text-muted">
                                    Price updates automatically when you change the number of tickets
                                </small>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Confirm Reservation
                            </button>
                            <a asp-controller="Catalogo" asp-action="Sessoes" asp-route-id="@sessao?.FilmeId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @if (sessao != null)
    {
        <script>
            const numberOfTicketsInput = document.getElementById('numberOfTickets');
            const totalElement = document.getElementById('total');
            const precoPorBilhete = @sessao.Preco;
            const isEnglish = true;

            // Function to format currency
            function formatCurrency(value) {
                if (isEnglish) {
                    return new Intl.NumberFormat('en-US', { 
                        style: 'currency', 
                        currency: 'EUR' 
                    }).format(value);
                } else {
                    return new Intl.NumberFormat('pt-PT', { 
                        style: 'currency', 
                        currency: 'EUR' 
                    }).format(value);
                }
            }

            // Update total when number of tickets changes
            function updateTotal() {
                const quantidade = parseInt(numberOfTicketsInput.value) || 1;
                const total = quantidade * precoPorBilhete;
                totalElement.textContent = formatCurrency(total);
            }

            // Add event listener
            numberOfTicketsInput.addEventListener('input', updateTotal);
            numberOfTicketsInput.addEventListener('change', updateTotal);

            // Initialize on page load
            updateTotal();
        </script>
    }
}