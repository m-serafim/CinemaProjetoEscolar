@model IEnumerable<CinemaGestao.Models.Reserva>

@{
    ViewData["Title"] = User.IsInRole("Administrador") ? "All Reservations" : "My Reservations";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container-fluid">
    <h1 class="mb-4">
        @if (User.IsInRole("Administrador"))
        {
            <i class="bi bi-ticket-detailed"></i><text> All Reservations</text>
        }
        else
        {
            <i class="bi bi-ticket-perforated"></i><text> My Reservations</text>
        }
    </h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No reservations registered.
        </div>
        @if (User.IsInRole("Cliente"))
        {
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-film"></i> Browse Movie Catalog
            </a>
        }
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Movie</th>
                                <th>Session Date</th>
                                <th>Room</th>
                                <th>Tickets</th>
                                <th>Total</th>
                                <th>Reserved On</th>
                                @if (User.IsInRole("Administrador"))
                                {
                                    <th>Customer</th>
                                }
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reserva in Model.OrderByDescending(r => r.DataReserva))
                            {
                                <tr>
                                    <td><strong>#@reserva.Id</strong></td>
                                    <td><strong>@reserva.Sessao.Filme.Titulo</strong></td>
                                    <td>@reserva.Sessao.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@reserva.Sessao.Sala</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@reserva.NumeroBilhetes</span>
                                    </td>
                                    <td>@((reserva.Sessao.Preco * reserva.NumeroBilhetes).ToString("C"))</td>
                                    <td>@reserva.DataReserva.ToString("dd/MM/yyyy HH:mm")</td>
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <td><small>@reserva.UtilizadorId.Substring(0, Math.Min(8, reserva.UtilizadorId.Length))...</small></td>
                                    }
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@reserva.Id" class="btn btn-sm btn-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@reserva.Id" class="btn btn-sm btn-danger" title="Cancel">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3">
                    <strong>Total Reservations:</strong> @Model.Count() | 
                    <strong>Total Tickets:</strong> @Model.Sum(r => r.NumeroBilhetes) | 
                    <strong>Total Revenue:</strong> @Model.Sum(r => r.Sessao.Preco * r.NumeroBilhetes).ToString("C")
                </div>
            </div>
        </div>
    }
</div>