@model IEnumerable<CinemaGestao.Models.Filme>
@using CinemaGestao.Helpers

@{
    ViewData["Title"] = "Gestão de Filmes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-film"></i> Gestão de Filmes</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Adicionar Novo Filme
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Não há filmes cadastrados no sistema.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Capa</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Titulo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Genero)
                                </th>
                                <th>
                                    Duração
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.CapaUrl))
                                        {
                                            <img src="@item.CapaUrl" alt="@item.Titulo" style="width: 50px; height: 75px; object-fit: cover;" class="rounded">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 75px;">
                                                <i class="bi bi-film text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td><strong>@Html.DisplayFor(modelItem => item.Titulo)</strong></td>
                                    <td>
                                        <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Genero)</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            <i class="bi bi-clock"></i> @DurationHelper.FormatDuration(item.DuracaoMinutos, false)
                                        </span>
                                    </td>
                                    <td>
                                        <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                            @Html.DisplayFor(modelItem => item.Descricao)
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3">
                    <strong>Total de Filmes:</strong> @Model.Count()
                </div>
            </div>
        </div>
    }
</div>
