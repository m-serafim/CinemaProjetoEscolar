@model CinemaGestao.Models.Filme
@using CinemaGestao.Helpers

@{
    ViewData["Title"] = "Eliminar Filme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4 text-danger"><i class="bi bi-trash"></i> Eliminar Filme</h1>

            <div class="alert alert-danger">
                <h5><i class="bi bi-exclamation-triangle"></i> Tem a certeza que deseja eliminar este filme?</h5>
                <p class="mb-0">Esta ação não pode ser desfeita. Todas as sessões associadas também serão afetadas.</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Detalhes do Filme</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.CapaUrl))
                            {
                                <img src="@Model.CapaUrl" alt="@Model.Titulo" class="img-fluid rounded shadow">
                            }
                            else
                            {
                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                                    <i class="bi bi-film" style="font-size: 4rem; color: white;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Título:</dt>
                                <dd class="col-sm-8"><strong>@Model.Titulo</strong></dd>

                                <dt class="col-sm-4">Género:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Model.Genero</span>
                                </dd>

                                <dt class="col-sm-4">Duração:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info text-dark">
                                        <i class="bi bi-clock"></i> @DurationHelper.FormatDuration(Model.DuracaoMinutos, false)
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Descrição:</dt>
                                <dd class="col-sm-8">@Model.Descricao</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash"></i> Sim, Eliminar Filme
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> Não, Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
