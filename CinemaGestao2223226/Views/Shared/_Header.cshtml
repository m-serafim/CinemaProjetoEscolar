<header class="site-header">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/icons/logo-white.svg" alt="Nexor Cinema" class="logo-icon" />
                <span class="logo-text">Nexor Cinema</span>
            </a>

            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Center: Search Box -->
                <div class="navbar-search mx-auto">
                    <div class="search-box">
                        <img src="~/images/icons/search.svg" alt="Search" class="search-icon" />
                        <input type="text" class="search-input" placeholder="Search movies..." />
                    </div>
                </div>

                <!-- Left: Navigation Links -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Catalogo" asp-action="Index">Movie Catalog</a>
                    </li>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Cliente"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservas" asp-action="Index">My Reservations</a>
                        </li>
                    }
                </ul>

                <!-- Right: Action Buttons -->
                <div class="navbar-actions">
                    <a class="action-btn" asp-controller="Catalogo" asp-action="Index">
                        <i class="bi bi-card-list"></i>
                        <span>Cartaz</span>
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <partial name="_LoginPartial" />
                    }
                    else
                    {
                        <a class="action-btn btn-login" asp-area="Identity" asp-page="/Account/Login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Login</span>
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>
