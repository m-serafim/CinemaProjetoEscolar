@using Microsoft.AspNetCore.Localization
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.UICulture.Name ?? "pt-PT";
}

<style>
    .language-switcher {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .language-btn {
        background: rgba(56, 189, 248, 0.1);
        border: 2px solid transparent;
        padding: 0.4rem 0.6rem;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        line-height: 1;
        text-decoration: none;
        min-width: 45px;
        min-height: 45px;
    }

    .language-btn:hover {
        border-color: #38BDF8;
        background-color: rgba(56, 189, 248, 0.2);
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 4px 12px rgba(56, 189, 248, 0.3);
    }

    .language-btn.active {
        border-color: #38BDF8;
        background-color: rgba(56, 189, 248, 0.25);
        box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.2);
        transform: scale(1.05);
    }

    .language-btn.active:hover {
        transform: translateY(-2px) scale(1.08);
    }

    .flag-icon {
        font-size: 1.8rem;
        line-height: 1;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    }
</style>

<div class="language-switcher">
    <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline; margin: 0;">
        <input type="hidden" name="culture" value="pt-PT" />
        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
        <button type="submit" class="language-btn @(currentCulture == "pt-PT" ? "active" : "")" title="Português">
            <span class="flag-icon">🇵🇹</span>
        </button>
    </form>

    <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline; margin: 0;">
        <input type="hidden" name="culture" value="en-US" />
        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
        <button type="submit" class="language-btn @(currentCulture == "en-US" ? "active" : "")" title="English">
            <span class="flag-icon">🇬🇧</span>
        </button>
    </form>
</div>