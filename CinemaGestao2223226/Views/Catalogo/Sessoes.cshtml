@model IEnumerable<CinemaGestao.Models.Sessao>

@{
    var filme = ViewBag.Filme as CinemaGestao.Models.Filme;
    ViewData["Title"] = $"Sessões - {filme.Titulo}";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Catálogo</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@filme.Id">@filme.Titulo</a></li>
            <li class="breadcrumb-item active" aria-current="page">Sessões</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-12">
            <h1>🎬 @filme.Titulo</h1>
            <p class="lead">Sessões Disponíveis</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Não há sessões disponíveis para este filme no momento.
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar ao Catálogo
        </a>
    }
    else
    {
        <div class="row">
            @foreach (var sessao in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-calendar3"></i>
                                @sessao.DataHora.ToString("dd/MM/yyyy")
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <i class="bi bi-clock"></i>
                                @sessao.DataHora.ToString("HH:mm")
                            </h6>
                            <hr />
                            <p class="card-text">
                                <strong>Sala:</strong> @sessao.Sala<br />
                                <strong>Preço:</strong> @sessao.Preco.ToString("C")<br />
                                <strong>Lugares Disponíveis:</strong> 
                                <span class="badge @(sessao.LugaresDisponiveis > 10 ? "bg-success" : sessao.LugaresDisponiveis > 0 ? "bg-warning" : "bg-danger")">
                                    @sessao.LugaresDisponiveis / @sessao.LugaresTotais
                                </span>
                            </p>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Cliente"))
                            {
                                @if (sessao.LugaresDisponiveis > 0)
                                {
                                    <a asp-controller="Reservas" asp-action="Create" asp-route-sessaoId="@sessao.Id" class="btn btn-primary w-100">
                                        <i class="bi bi-ticket-perforated"></i> Reservar
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" disabled>Esgotado</button>
                                }
                            }
                            else if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-box-arrow-in-right"></i> Login para Reservar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="mt-3">
            <a asp-action="Details" asp-route-id="@filme.Id" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    }
</div>