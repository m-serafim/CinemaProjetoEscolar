@model CinemaGestao.Models.Filme
@using Microsoft.AspNetCore.Localization

@{
    ViewData["Title"] = Model.Titulo;
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var isEnglish = (requestCulture?.RequestCulture.UICulture.Name ?? "pt-PT") == "en-US";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">@(isEnglish ? "Catalog" : "Catálogo")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.CapaUrl))
            {
                <img src="@Model.CapaUrl" class="img-fluid rounded shadow" alt="@Model.Titulo">
            }
            else
            {
                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 500px;">
                    <i class="bi bi-film" style="font-size: 8rem; color: white;"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <h1 class="mb-3">@Model.Titulo</h1>
            
            <div class="mb-3">
                <span class="badge bg-primary me-2">@Model.Genero</span>
                <span class="badge bg-info text-dark">@Model.DuracaoMinutos @(isEnglish ? "minutes" : "minutos")</span>
            </div>

            <h5>@(isEnglish ? "Synopsis" : "Sinopse")</h5>
            <p class="lead">@Model.Descricao</p>

            <hr />

            <div class="d-grid gap-2">
                <a asp-action="Sessoes" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                    <i class="bi bi-calendar-event"></i> @(isEnglish ? "View Available Sessions" : "Ver Sessões Disponíveis")
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> @(isEnglish ? "Back to Catalog" : "Voltar ao Catálogo")
                </a>
            </div>
        </div>
    </div>
</div>