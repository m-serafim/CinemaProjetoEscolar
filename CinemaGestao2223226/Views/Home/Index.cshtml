@model IEnumerable<CinemaGestao.Models.Filme>
@using CinemaGestao.Helpers
@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<!-- Hero Section with improved styling -->
<div class="hero-section text-center">
    <h1 class="display-3 fw-bold">
        🎬 Welcome to Nexor Cinema
    </h1>
    <p class="lead fs-4 mb-4">
        Cinema Management System - School Project
    </p>
    <a asp-controller="Catalogo" asp-action="Index" class="btn btn-danger btn-lg mt-3 px-5">
        <i class="bi bi-ticket-perforated"></i> View Available Movies
    </a>
</div>

<!-- Now Showing Section with Movie Cards -->
<div class="row mb-5">
    <div class="col-12">
        <h2 class="mb-4"><i class="bi bi-film"></i> Now Showing</h2>
        
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 
                There are no movies currently showing. Check our <a asp-controller="Catalogo" asp-action="Index" class="alert-link">full catalog</a>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
                @foreach (var filme in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(filme.CapaUrl))
                            {
                                <div style="width: 100%; aspect-ratio: 2/3; overflow: hidden; display: flex; align-items: center; justify-content: center; background-color: #000;">
                                    <img src="@filme.CapaUrl" class="card-img-top" alt="@filme.Titulo" style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="width: 100%; aspect-ratio: 2/3;">
                                    <i class="bi bi-film" style="font-size: 5rem; color: white;"></i>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@filme.Titulo</h5>
                                <p class="card-text">
                                    <span class="badge bg-primary">@filme.Genero</span>
                                    <span class="badge bg-info text-dark">@DurationHelper.FormatDuration(filme.DuracaoMinutos, true)</span>
                                </p>
                                <p class="card-text text-truncate">@filme.Descricao</p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a asp-controller="Catalogo" asp-action="Details" asp-route-id="@filme.Id" class="btn btn-primary w-100">
                                    <i class="bi bi-info-circle"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center">
                <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-arrow-right-circle"></i> View All Movies
                </a>
            </div>
        }
    </div>
</div>

<!-- Quick Info Cards -->
<div class="row mb-5">
    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-clock-history" style="font-size: 3rem; color: #38BDF8;"></i>
                <h5 class="card-title mt-3">Flexible Schedule</h5>
                <p class="card-text">
                    Sessions available from morning to night, every day of the week
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-database" style="font-size: 3rem; color: #22c55e;"></i>
                <h5 class="card-title mt-3">Complete Management</h5>
                <p class="card-text">
                    Integrated system for managing movies, sessions and reservations
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-check" style="font-size: 3rem; color: #eab308;"></i>
                <h5 class="card-title mt-3">User System</h5>
                <p class="card-text">
                    Access control with administrator and client profiles
                </p>
            </div>
        </div>
    </div>
</div>

<!-- User Action Cards -->
<div class="row mt-5">
    @if (User.IsInRole("Administrador"))
    {
        <div class="col-12 mb-4">
            <h3 class="mb-3"><i class="bi bi-gear-fill"></i> Administration Panel</h3>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-center shadow">
                <div class="card-body">
                    <i class="bi bi-film" style="font-size: 3rem; color: #38BDF8;"></i>
                    <h5 class="card-title mt-3">Manage Movies</h5>
                    <p class="card-text">Add, edit and remove movies</p>
                    <a asp-controller="Filmes" asp-action="Index" class="btn btn-primary">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-center shadow">
                <div class="card-body">
                    <i class="bi bi-calendar-event" style="font-size: 3rem; color: #22c55e;"></i>
                    <h5 class="card-title mt-3">Manage Sessions</h5>
                    <p class="card-text">Manage schedules and rooms</p>
                    <a asp-controller="Sessoes" asp-action="Index" class="btn btn-success">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-center shadow">
                <div class="card-body">
                    <i class="bi bi-ticket-perforated" style="font-size: 3rem; color: #eab308;"></i>
                    <h5 class="card-title mt-3">View Reservations</h5>
                    <p class="card-text">All system reservations</p>
                    <a asp-controller="Reservas" asp-action="Index" class="btn btn-warning">Access</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card text-center shadow">
                <div class="card-body">
                    <i class="bi bi-people" style="font-size: 3rem; color: #ef4444;"></i>
                    <h5 class="card-title mt-3">Users</h5>
                    <p class="card-text">View registered users</p>
                    <a asp-controller="Utilizadores" asp-action="Index" class="btn btn-danger">Access</a>
                </div>
            </div>
        </div>
    }

    @if (!User.IsInRole("Administrador"))
    {
        <div class="col-12 mb-4">
            <h3 class="mb-3"><i class="bi bi-star-fill"></i> Quick Access</h3>
        </div>
    }

    <div class="col-md-6 mb-4">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <i class="bi bi-film" style="font-size: 3rem; color: #38BDF8;"></i>
                <h5 class="card-title mt-3">Movie Catalog</h5>
                <p class="card-text">
                    Explore the movies on show and choose your next session
                </p>
                <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary btn-lg">
                    View Catalog
                </a>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Cliente"))
    {
        <div class="col-md-6 mb-4">
            <div class="card text-center shadow h-100">
                <div class="card-body">
                    <i class="bi bi-ticket-perforated" style="font-size: 3rem; color: #22c55e;"></i>
                    <h5 class="card-title mt-3">My Reservations</h5>
                    <p class="card-text">
                        View and manage your reservation history
                    </p>
                    <a asp-controller="Reservas" asp-action="Index" class="btn btn-success btn-lg">
                        View Reservations
                    </a>
                </div>
            </div>
        </div>
    }
    else if (!User.Identity.IsAuthenticated)
    {
        <div class="col-md-6 mb-4">
            <div class="card text-center shadow h-100">
                <div class="card-body">
                    <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; color: #22c55e;"></i>
                    <h5 class="card-title mt-3">Log In</h5>
                    <p class="card-text">
                        Sign in to your account to make reservations and access the system
                    </p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success btn-lg">Login</a>
                </div>
            </div>
        </div>
    }
</div>

@if (!User.Identity.IsAuthenticated)
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-info text-center shadow-sm">
                <h4><i class="bi bi-person-plus-fill"></i> New here?</h4>
                <p class="mb-3">
                    Create an account to book tickets and test all features!
                </p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus"></i> Register Now
                </a>
            </div>
        </div>
    </div>
}

